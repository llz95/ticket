.list-header {
  padding: 50rpx 0;
  text-align: left;
  font-weight: normal;
  font-size: 40rpx;
  line-height: 40rpx;
  color: #21759b;
  border-bottom: 2rpx solid #ededed;
  margin-bottom: 48rpx;
}
/*topic list*/
.topic-common-list {
  padding: 30rpx 30rpx;
}
.topic-list-item {
  position: relative;
  border-bottom: 1px solid #eee;
  overflow: hidden;
  clear: both;
  border: 1px solid #ccc;
  border-radius: 6px;
  margin-bottom: 30rpx;
  background: #fff;
}
.topic-list-item  image.cover {
  width: 100%;
  height: 300rpx;
}
.topic-content-title {
  padding: 10rpx 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.topic-content-title text {
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: bold;
  color: #121b23;
}
.topic-content-brief {
  padding: 0rpx 30rpx 30rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #989ebb;
}
.top-bar {
  height: 100rpx;
  background: white;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 1;
}
.top-bar-item {
  display: inline-block;
  /*background: #33993b;*/
  width: 20%;
  color: gray;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #eee;
  
}
.top-bar-item-Selected {
  color: #14B9C8;
  background: #ffffff;
  border-bottom: 3px solid #14B9C8;
}




